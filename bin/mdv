#!/bin/bash
#
# Markdown and view immediately in a browser, then remove the html file
#

if [ "$1" = "" ]; then
	echo "usage: mdv <in.md>"
	exit 1
fi

dst=${1%%.md}.html
if [ -f "$dst" ]; then
	echo "Destination file '$dst' already exists"
	exit 1
fi

md $1
echo $dst
if [ -f "$dst" ]; then
	$BROWSER "$dst"
	(sleep 5; rm "$dst") &
fi
